<h3>
  <span class="far fa-edit"></span> Edit
</h3>
 <h6>{{viewData.title}} written by {{viewData.id}}</h6>
<form method="post" action="./{{viewData.id}}/update">
  <input type="hidden" name="id" value="{{viewData.id}}" />
  <div class="form-group">
    <input type="text" class="form-control" name="description" placeholder="Update task description here" value="{{viewData.description}}" required="required" autofocus="autofocus" />
  </div>
  <br>
  <button type="submit" class="btn btn-lg btn-primary">Update Snippet</button>
</form>
