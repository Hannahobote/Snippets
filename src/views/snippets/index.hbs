<div class="d-grid gap-3">
  <h4 class="d-flex justify-content-center p-2">Welcome to Snippets, where you can save your snippets for free!</h4>
</div>
{{#if viewData.snippet}}

    {{#each viewData.snippet}}
      <h6>{{title}} written by {{author}}</h6>
      <textarea 
      readonly
      class="form-control" 
      cols="100" 
      rows="7">
      {{description}}
      </textarea>


<div class="d-grid gap-2 d-md-block">
  <a href="./{{id}}/edit"><span class="far fa-edit btn btn-lg btn-success"> edit</span></a>
  <a href="./{{id}}/remove"><span class="far fa-trash-alt btn btn-lg btn-danger">delete</span></a>
</div>
{{/each}}

{{else}}
<tr colspan="2">
  <td class="text-center">No snippets to display.</td>
</tr>
</div>
{{/if}}